<Window x:Class="SecondClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecondClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="textBoxUserId" HorizontalAlignment="Left" Margin="37,37,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxMessage" HorizontalAlignment="Left" Margin="37,73,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnSend" Content="Button" HorizontalAlignment="Left" Margin="37,125,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.946,-0.488" Width="120" PreviewMouseLeftButtonDown="btnSend_PreviewMouseLeftButtonDown"/>
        <ListBox x:Name="chatLog" Margin="0,164,0,10"/>

    </Grid>
</Window>
